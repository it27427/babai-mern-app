{
  "name": "babai-mern-app",
  "version": "1.0.0",
  "description": "This is a mern-stack ecommerce web app to create, read, update, filter and delete products. This app created by React.js(v18), Node.js, Express.js, MongoDB, TailwindCSS.",
  "main": "app.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm run dev --prefix views",
    "dev": "concurrently \"nodemon server.js\" \"npm run client\""
  },
  "keywords": [
    "MERN-APP",
    "E-COMMERCE",
    "MERN"
  ],
  "author": "Istiak Hossain Tushar",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "concurrently": "^8.2.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "mongoose": "^8.4.1"
  },
  "devDependencies": {
    "colors": "^1.4.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.2"
  }
}
